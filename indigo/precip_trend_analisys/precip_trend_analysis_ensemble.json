{
    "name": "Ensemble analysis related to precipitation trend analysis",
    "author": "CMCC",
    "abstract": "Usage: /path/precip_trend_analysis_ensemble.json file1.nc|file2.nc pathscript. In particular, ${1} is the list of (OPeNDAP URLs to) NC files to be analyzed, ${2} is the path to bash scripts (work directory).",
    "exec_mode": "sync",
    "ncores": "1",
    "on_exit":"oph_delete",
    "tasks": [
	{
            "name": "Delete Work Container",
            "operator": "oph_deletecontainer",
            "arguments": [
                "container=ensemble",
                "hidden=no",
                "delete_type=physical"
            ],
            "on_error": "skip"
        },
        {
            "name": "Create Work Container",
            "operator": "oph_createcontainer",
            "arguments": [
                "container=ensemble",
                "dim=lat|lon",
                "dim_type=double|double",
                "hierarchy=oph_base|oph_base",
                "compressed=no",
                "ncores=1"
            ],
            "dependencies": [
                {
                    "task": "Delete Work Container"
                }
            ],
            "on_error": "skip"
        },
        {
            "name": "loop",
            "operator": "oph_for",
            "arguments": [
                "key=name_file",
                "values=${1}",
                "parallel=yes"
            ],
            "dependencies": [
                {
                    "task": "Create Work Container",
                    "type": "single"
                }
            ]
        },
        {
            "name": "import",
            "operator": "oph_importnc2",
            "arguments": [
                "cwd=/",
                "measure=precip_trend",
                "src_path=@{name_file}",
                "import_metadata=yes",
                "nfrag=1",
                "container=ensemble",
                "grid=map"
            ],
            "dependencies": [
                {
                    "task": "loop",
                    "type": "single"
                }
            ]
        },
        {
            "name": "End loop",
            "operator": "oph_endfor",
            "arguments": [],
            "dependencies": [
                {
                    "task": "import",
                    "type": "all"
                }
            ]
        },
        {
            "name": "merging",
            "operator": "oph_mergecubes2",
            "arguments": ["dim=new_dim"],
            "dependencies": [
                {
                    "task": "End loop",
                    "type": "all",
                    "argument": "cubes"
                }
            ]
        },
	{
            "name": "loop_reduce",
            "operator": "oph_for",
            "arguments": [ "key=index", "values=avg|min|max|var|std", "parallel=yes" ],
            "dependencies": [ { "task":"merging", "type": "single" } ]
	},
        {
            "name": "reducing",
            "operator": "oph_reduce2",
            "arguments": [
                "operation=@{index}",
                "dim=new_dim"
            ],
            "dependencies": [
                {
                    "task": "loop_reduce",
                    "type": "single"
                }
            ]
        },
        {
            "name": "export",
            "operator": "oph_exportnc2",
            "arguments": [
		"force=yes",
            	"misc=yes",
                "output_name=@{index}"
            ],
            "dependencies": [
                {
                    "task": "reducing",
                    "type": "single"
                }
            ]
        },
        {
            "name": "Post",
            "operator": "oph_script",
            "arguments": [
                "script=precip_trend_analysis_ensemble",
                "args=@{index}"
            ],
            "dependencies": [
                {
                    "task": "export"
                } 
            ]
        },
        {
            "name": "End loop_reduce",
            "operator": "oph_endfor",
            "arguments": [ ],
            "dependencies": [ { "task":"Post" } ]
        },
        {
            "name": "Delete all cubes",
            "operator": "oph_delete",
            "arguments": [
                "cube=[container=ensemble]"
            ],
            "dependencies": [
                {
                    "task": "End loop_reduce"
                }
            ],
            "on_error": "skip"
        },
        {
            "name": "Delete container",
            "operator": "oph_deletecontainer",
            "arguments": [
                "container=ensemble",
                "hidden=no",
                "delete_type=physical"
            ],
            "dependencies": [
                {
                    "task": "Delete all cubes"
                }
            ],
            "on_error": "skip"
        }
    ]
}
            
